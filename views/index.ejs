<!DOCTYPE html>
<html>
  <head>
    <title>Twitter Feed</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Dosis|Open+Sans:400,600">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header>
      <h1>Twitter Feed</h1>
    </header>

    <form method='get' action='/'>
      <input placeholder="Twitter Handle" type="text" name="username">
      <button type="submit">Submit</button>
    </form>

    <% if (typeof error !== 'undefined') { %>
      <% error.forEach(function(error) { %>
        <% if (error.code == 34) { %>
          <span class='error'>That user does not exist.</span>
        <% } else { %>
          <span class='error'><%= error.message %></span>
        <% } %>
      <% }) %>
    <% } %>

    <% if (tweets !== null) { %>
      <div id='tweet-wrapper' class='container'>
        <% tweets.forEach(function(tweet) { %>
          <div class='tweet'>
            <div class='main-details container'>
              <a href="http://www.twitter.com/nodejs" class='container'>
                <img src="<%= tweet.user.profile_image_url %>"/>
                <h4><%= tweet.user.name %></h4>
                <h6><%='@' + tweet.user.screen_name %></h6>
              </a>
            </div>
            <div class='tweet-body'>
              <p><%= tweet.text %></p>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </body>
</html>
